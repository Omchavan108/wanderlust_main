

 <% if(success && success.length){ %>
<div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert" id="flash-success">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if(error && error.length){ %>
<div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert" id="flash-error">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<script>
  // Auto-hide flash messages after 3 seconds
  setTimeout(function() {
    var success = document.getElementById('flash-success');
    if(success) {
      var alert = new bootstrap.Alert(success);
      alert.close();
    }
    var error = document.getElementById('flash-error');
    if(error) {
      var alert = new bootstrap.Alert(error);
      alert.close();
    }
  }, 3000);
</script>